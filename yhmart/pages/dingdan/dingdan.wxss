/* pages/dingdan/dingdan.wxss */
image{
    vertical-align: bottom;
}
page{
    background: #f5f5f5;
}
.orderItem{
    background: #FFF;
    width: 90%;
    margin: 0 auto;
    border-radius: 20rpx;
    margin-top: 30rpx;
}
.goodsView{
    overflow: hidden;
    border-bottom: 1px dashed #ddd;
    padding-bottom: 20rpx;
}
.goodsItem{
    overflow: hidden;
    margin: 20rpx 0;
}
.pinglun{
    width: 25%;
    float: right;
    margin-right: 10%;
    font-size: 30rpx;
    text-align: center;
    color: rgb(255, 80, 0);
    border: 1px rgb(255, 80, 0) solid;
    border-radius: 50rpx;
}
.goodsImg{
    width: 30%;
    float: left;
    margin-left: 5%;
}
.goodsImg image{
    width: 100%;
}
.goodsname{
    float: left;
    width: 30%;
    color: rgb(51, 51, 51);
}
.goodsprice{
    float: left;
    width: 30%;
}
.goodsprice text{
    display: block;
    text-align: right;
}
.orderTitle{
    text-align: center;
    background: #FFF;
}
.goodsnum{
    color: rgb(153, 153, 153);
    font-size: 30rpx;
}
.out_trade_no{
    color: rgb(153, 153, 153);
    font-size: 30rpx;
    box-sizing: border-box;
    padding: 20rpx;
}
.orderprice{
    text-align: right;
    color: rgb(153, 153, 153);
    font-size: 30rpx;
    box-sizing: border-box;
    padding: 20rpx;
}
.orderstatus{
    float: right;
}