/* pages/kind/kind.wxss */
.banner image{
    width: 100%;
}
.banner {
    height: 360rpx;
    overflow: hidden;
}
.kind{
    width: 25%;
    float: left;
    text-align: center;
    float: left;
    height: 100%;
    box-sizing: border-box;
}
.kindItem{
    padding: 30rpx 0;
    border-bottom: 1px solid #eee;
    background: #fff;
}
.childKind{
    width: 75%;
    float: right;
    overflow: hidden;
}
.cildKindItem{
    width: 45%;
    margin: 40rpx 2.5% 0 2.5%;
    float: left;
    text-align: center;
    color: #999;
}
.empty{
    height: 100%;
    border-right: 1px solid #eee;
}
.cildKindItem image{
    width: 100%;
}