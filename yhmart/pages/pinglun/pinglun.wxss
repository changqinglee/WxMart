/* pages/pinglun/pinglun.wxss */
image{
    vertical-align: bottom;
}
.orderview{
    overflow:hidden;
    border-bottom: 1px #ddd dashed;
    padding-bottom: 20rpx;
}
.orderimg{
    width: 25%;
    float: left;
}
.orderimg image{
    width: 95%;
    margin-top: 5%;
    margin-left: 5%;
}
.orderinfo{
    float: left;
    width: 75%;
}
.orderinfo view{
    width: 90%;
    margin: 0 auto;
    font-size: 30rpx;
    text-align: right;
    color: rgb(153, 153, 153);
}
.discussimg{
    overflow: hidden;
    border-bottom: 1px dashed #ddd;
}
.empty{
    height: 20rpx;
    background: #EEE;
}
.discussimage{
    width: 20%;
    margin: 2.5%;
    text-align: center;
    float: left;
    box-sizing: border-box;
    color:#666;
    font-size: 20rpx;
    border:1px dashed #ddd;
}
.discussimage image{
    width:100%;
    height: 160rpx;
}
.addimage image{
    width: 80%;
    margin: 0 auto;
    vertical-align: middle;
}
.discusstextarea{
    width: 100%;
}
.textarea{
    margin: 0 auto;
    display: block;
    width: 90%;
    padding: 20rpx 0;
}
.submit{
    margin-top: 20rpx;
}
.button-hover[type=primary]{
    color: #fff;
}
button{
    width: 80%;
}
.placeholder{
    color: #ddd;
}
.discussnum{
    color: #666;
    text-align: center;
    margin-top: 20rpx;
}
.tip{
    color: #666;
    font-size: 24rpx;
}